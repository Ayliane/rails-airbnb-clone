<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="profile-box">
        <h2 class="text-center profile-head">Hello my name is <%= @user.first_name %> ! </h2>
        <% avatar_url = current_user.facebook_picture_url || "http://unsplash.it/30x30" %>
        <%= image_tag avatar_url, class: "profile-img avatar-large"%>
        <div class="profile-info">
        <ul>
          <liclass="text-center"><strong>First  name : </strong><%= @user.first_name %></li>
        </ul>
        </div>
        <div class="text-center edit-profile-btn">
          <%= link_to "Edit my profile", edit_user_path, class: "btn btn-primary" %>
          <%= link_to "Back to home page", root_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
