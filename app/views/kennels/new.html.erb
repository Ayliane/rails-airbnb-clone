<div class = "background help-block">
  <div class = "container text-center ">
    <div class = "row">
      <div class = "col-xs-12 col-sm-offset-3 col-sm-6 ">
        <div class = 'kennel-new-box'>
        <h2>Add a new dog sitting offer</h2>
        <%= simple_form_for(@kennel) do |f| %>
          <%= f.input :address, placeholder: "Address",label: false ,autofocus: true %>
          <%= f.input :city,label: false , placeholder: "City" %>
          <%= f.input :baseline, label:false, placeholder: "Your baseline" %>
          <%= f.input :description,label: false , placeholder: "Description" %>
          <%= f.input :habits,label: false , placeholder: "Your habits with dogs !" %>
          <%= f.input :other_animal, placeholder: "How many other animals do you have ?", label: false, class: "radiobox" %>
          <%= f.input :garden, as: :radio_buttons,
          item_label_class: "radio-inline",item_wrapper_tag: false,
          checked: false, label: 'Do you have a garden ?', class: "radiobox radio-inline" %>
          <%= f.input :childs_around, as: :radio_buttons,
          item_label_class: "radio-inline",item_wrapper_tag: false, checked: false, label: 'Do you have childs at home ?' %>
          <%= f.input :photo, as: :attachinary %>
          <%= f.submit "Submit my offer", class: "login-button" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
